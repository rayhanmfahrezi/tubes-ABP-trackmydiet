<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_food"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/FoodItemGL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/FoodItemGLv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/FoodItemGLvEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="1.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rvUser_furtherDetail"
        android:layout_width="0dp"
        android:layout_height="152dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="1dp"
        android:elevation="4dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/FoodItemGLvEnd"
        app:layout_constraintStart_toStartOf="@id/FoodItemGLv1"
        app:layout_constraintTop_toTopOf="@id/FoodItemGL1">


        <ImageView
            android:id="@+id/ivUserFoodImage"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/FurtherDetailGLEnd"
            app:layout_constraintEnd_toStartOf="@+id/FurtherGuideLineV2"
            app:layout_constraintStart_toStartOf="@+id/FurtherGuideLineV1"
            app:layout_constraintTop_toTopOf="@id/FurterDetailGL1"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Pizza"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/FurtherDetailGl2"
            app:layout_constraintEnd_toEndOf="@id/FurtherGLVEnd"
            app:layout_constraintStart_toEndOf="@id/FurtherGuideLineV2"
            app:layout_constraintTop_toTopOf="@id/FurterDetailGL1" />

        <TextView
            android:id="@+id/tvTotalCCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="calories"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/FurtherDetailGLEnd"
            app:layout_constraintStart_toEndOf="@id/FurtherGuideLineV2"
            app:layout_constraintTop_toTopOf="@+id/FurtherDetailGl2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvCalorieCount"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/FurtherDetailGLEnd"
            app:layout_constraintEnd_toStartOf="@+id/FurtherGLVEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tvTotalCCalories"
            app:layout_constraintTop_toTopOf="@+id/FurtherDetailGl2"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/FurterDetailGL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/FurtherDetailGl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.65" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/FurtherDetailGLEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="1.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/FurtherGuideLineV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/FurtherGuideLineV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="137dp"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/FurtherGLVEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>